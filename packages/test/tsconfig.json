{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "root": ["../"],
      "packages/*": ["../packages/*"],
      "cli/*": ["./*"]
    },
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
